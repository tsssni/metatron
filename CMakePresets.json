{
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30,
		"patch": 5
	},
	"configurePresets": [
		{
			"name": "default",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
			}
		},
		{
			"name": "dev",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "rel",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	],
	"version": 8
}
